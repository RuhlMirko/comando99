---
interface Props {
  navLinks: Record<string, string>;
}
const { navLinks } = Astro.props;
const entries = Object.entries(navLinks); // [key, value][]
---

<header>
  <nav>
    <ul class="nav-links">
      <!-- <li><a href="#hero">Inicio</a></li>
      <li><a href="#showcase">Sobre Nosotros</a></li>
      <li><a href="#gallery">Galeria</a></li>
      <li><a href="#faq">Preguntas Frecuentes</a></li> -->
      {
        entries.map((item) => (
          <li>
            <a href={`#${item[0]}`}>{item[1]}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
<style>
  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 15vh;
  }
  header {
    padding-top: 1.4em;
    width: 100%;
    background: rgba(44, 20, 16, 0.719);
    position: fixed;
    top: 0;
    z-index: 40;
    backdrop-filter: blur(25px);
  }
  .nav-links {
    display: flex;
    justify-content: center;
    list-style-type: none;
    padding-bottom: 1.2em;
    border-bottom: 1px solid rgba(255, 0, 0, 0.349);
  }
  .nav-links li a {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 1px;
    padding: 1em;
    transition: 0.2s;
    font-size: 1.2rem;
  }
  .nav-links li a:hover {
    background: rgba(255, 0, 0, 0.349);
  }
</style>
