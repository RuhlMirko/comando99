<style>
  h2 {
    font-size: 2rem;
  }
  h3 {
    margin-bottom: 1em;
  }
  footer {
    width: 100%;
    background-color: #121212;
    border-top: 2px solid rgba(126, 10, 10, 0.514);
    margin-top: 1em;
    padding: 2em 3rem 1em;
  }
  header p {
    max-width: 50ch;
    font-family: "Roboto Flex";
  }
  .footer-container {
    display: flex;
    justify-content: center;
    gap: 2em;

    & main {
      display: flex;
      justify-content: center;
      gap: 3em;

      & ul {
        list-style-type: none;

        & li a {
          color: #ffffff63;
          font-weight: 400;
          text-decoration: none;
          text-transform: uppercase;
          letter-spacing: 2px;
        }
        & li {
          margin-bottom: 1em;
        }
      }
    }
  }
  .footer-container main ul li {
    text-decoration: none;
  }
</style>
