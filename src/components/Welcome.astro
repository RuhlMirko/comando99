---
import { Image } from "astro:assets";
import logo from "../../public/images/logo.png";
---

<main>
  <div class="scanline-overlay"></div>
  <section class="hero" id="hero">
    <span class="reclutamos">Fase de reclutamiento: Abierta</span>
    <Image src={logo} alt="comando 99 logo" loading="eager" />
    <h1>
      Excelencia <br /><span style="color: red;">Tactica</span>
    </h1>
    <p>
      <span class="text-accent">Comando 99</span> es una comunidad milsim de Arma
      3 dedicada a recrear operaciones militares con realismo, disciplina y trabajo
      en equipo.
    </p>
    <div class="cta">
      <a href="https://discord.com/invite/UJUp2cWtwp" class="cta-call"
        >Nuestro Discord</a
      >
      <a href="#showcase">Mas Informacion</a>
    </div>
  </section>
</main>

<style>
  main {
    position: relative;
    max-height: 1920px;
  }
  h1 {
    text-transform: uppercase;
    font-size: 5rem;
    line-height: 0.9;
    margin-top: 0.3em;
  }
  .hero {
    padding-top: 40vh;
    padding-inline: 3vw;
    padding-bottom: 15vh;
    & p {
      max-width: 60ch;
      font-size: 1.6vw;
    }
  }
  img {
    display: block;
    height: 40vw;
    width: 40vw;
    position: absolute;
    top: 12vh;
    right: 2vw;
    filter: drop-shadow(8px 16px 3px rgba(0, 0, 0, 0.678));
  }
  .reclutamos {
    background: rgba(255, 0, 0, 0.199);
    border: 1px solid rgba(255, 0, 0, 0.411);
    padding: 6px 26px;
    color: rgb(252, 73, 42);
    font-weight: 700;
    letter-spacing: 3px;
    font-family:
      sans-serif,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue";
  }
  .text-accent {
    color: rgb(253, 85, 85);
    font-weight: 600;
    font-family: "Stick No Bills";
    letter-spacing: 1.3px;
  }
  a {
    border: 1px solid rgba(255, 255, 255, 0.452);
    color: inherit;
    text-decoration: none;
    padding: 12px 28px;
    margin-right: 1em;
  }
  .cta {
    margin-top: 1.5em;
    font-size: 1.2em;
  }
  .cta-call {
    border-color: transparent;
    background: hsla(0, 99%, 49%, 0.753);
    /* text-transform: uppercase; */
    font-weight: 600;
    letter-spacing: 1px;
    text-shadow: 0 0 5px rgb(0, 0, 0);
  }
  .cta a:hover {
    background: rgba(160, 1, 1, 0.747);
    border-color: red;
  }
  @media (max-width: 1024px) {
    h1 {
      font-size: 15vw;
    }
    #hero p {
      font-size: 2rem;
    }
    .cta {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 10px;
    }
    .cta a {
      font-size: 2rem;
      padding: 2vh 5vw;
      width: 90vw;
      text-align: center;
      background: #111111b9;
    }
    .cta .cta-call {
      background: hsla(0, 99%, 49%, 0.753);
    }
    .reclutamos {
      font-size: 3vw;
    }

    main {
      background-color: rgba(0, 0, 0, 0.3);
      background-image: url("../../public/images/logo.png");
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      background-attachment: fixed;
    }
    img {
      display: none;
    }

    .hero {
      background: #111111b9;
      backdrop-filter: blur(5px);
      margin: 0;
    }
  }
</style>
