---
const images = import.meta.glob("/public/images/galeria/*.*", { eager: true });
const imagePaths = Object.keys(images).map((path) =>
  path.replace("/public", ""),
);
---

<section class="galeria" id="gallery">
  <h2>Galeria</h2>
  <div class="gallery-list">
    {imagePaths.map((item) => <img src={item} />)}
  </div>
  <a href="/galeria">Ver mas fotos</a>
</section>

<style>
  h2 {
    font-size: 10vh;
    border-bottom: 2px solid red;
    margin-bottom: 0.2em;
    padding-bottom: 0;
    padding-left: 0.2em;
  }

  .galeria {
    min-height: 200px;
    border-top: 2px solid red;
    margin-inline: 5vw;
  }
  .gallery-list {
    columns: 3;
    overflow-y: hidden;
    overflow-x: hidden;
    max-height: 720px;
    margin-bottom: 0;
  }
  .gallery-list img {
    width: 100%;
    margin: 5px;
  }
  .gallery-list img:hover {
    cursor: pointer;
  }
  a {
    color: inherit;
    font-weight: 600;
    text-decoration: none;
    font-size: 2rem;
    text-align: center;
    width: 100%;
    background-color: brown;
    display: block;
    padding: 0.2em 0 0.4em;
    text-transform: uppercase;
  }
</style>
