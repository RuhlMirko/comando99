---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

const galleryFiles = import.meta.glob("/public/images/galeria/*/*.*", {
  eager: true,
});

const getPublicImagePaths = (dir: string) => {
  return Object.keys(galleryFiles)
    .filter((path) => path.includes(`/public/images/galeria/${dir}/`))
    .sort((a, b) => a.localeCompare(b))
    .map((path) => path.replace("/public", ""));
};

const categories = {
  misiones: "Misiones",
  entrenamientos: "Entrenamientos",
  patrullas: "Patrullas",
  escenas: "Escenas",
} as const;

const images = Object.fromEntries(
  Object.keys(categories).map((key) => [key, getPublicImagePaths(key)]),
) as Record<keyof typeof categories, string[]>;
---

<Layout>
  <Navbar
    navLinks={{
      misiones: "Misiones",
      training: "Entrenamientos",
      escenas: "Escenas",
      patrullas: "Patrullas",
    }}
  />
  <main>
    <h1>Galeria de Comando 99</h1>
    <p>
      Esta es una recopilacion de fotos/capturas de pantallas de misiones,
      entrenamientos, escenas recreadas y patrullas realizadas en nuestras
      actividades.
    </p>
    <div>
      <h2 id="misiones">Misiones</h2>
      <div class="gallery-list">
        {
          images.misiones.map((item, index) => {
            const filename =
              item.split("/").pop()?.split(".")[0].replaceAll("-", "/") ||
              "imagen";
            return (
              <div class="gallery-item">
                <Image
                  src={item}
                  alt={`Comando 99 - ${filename}`}
                  width={800}
                  height={200}
                  loading={index < 6 ? "eager" : "lazy"}
                  fetchpriority={index === 0 ? "high" : "auto"}
                />
                <p>{filename}</p>
              </div>
            );
          })
        }
      </div>
      <h2 id="training">Entrenamientos</h2>
      <div class="gallery-list">
        {
          images.entrenamientos.map((item) => {
            const filename =
              item.split("/").pop()?.split(".")[0].replaceAll("-", "/") ||
              "imagen";
            return (
              <div class="gallery-item">
                <Image
                  src={item}
                  alt={`Comando 99 - ${filename}`}
                  width={800}
                  height={200}
                />
                <p>{filename}</p>
              </div>
            );
          })
        }
      </div>
      <h2 id="patrullas">Patrullas</h2>
      <div class="gallery-list">
        {
          images.patrullas.map((item) => {
            const filename =
              item.split("/").pop()?.split(".")[0].replaceAll("-", "/") ||
              "imagen";
            return (
              <div class="gallery-item">
                <Image
                  src={item}
                  alt={`Comando 99 - ${filename}`}
                  width={800}
                  height={200}
                />
                <p>{filename}</p>
              </div>
            );
          })
        }
      </div>
      <h2 id="escenas">Escenas</h2>
      <div class="gallery-list">
        {
          images.escenas.map((item) => {
            const filename =
              item.split("/").pop()?.split(".")[0].split("-").join(" ") ||
              "imagen";
            return (
              <div class="gallery-item">
                <Image
                  src={item}
                  alt={`Comando 99 - ${filename}`}
                  width={800}
                  height={200}
                />
                <p>{filename}</p>
              </div>
            );
          })
        }
      </div>
      <div class="gallery-modal" aria-hidden="true">
        <button class="gallery-modal-close" aria-label="Cerrar">&times;</button>
        <img class="gallery-modal-image" alt="" />
      </div>
    </div>
  </main>
</Layout>

<style>
  html {
    scroll-padding-top: 60px;
  }
  body {
    max-width: 100vw;
    overflow-x: hidden;
    background: #121212;
    color: white;
    font-family:
      "Rajdhani",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  h1,
  h2,
  p {
    display: block;
  }

  h1 {
    font-size: 3rem;
    margin-top: 150px;
    margin-bottom: 0;
  }
  h2 {
    font-size: 3em;
    margin-bottom: 0;
    border-block: 2px solid rgb(145, 4, 4);
    background: #1f0202c9;
    padding: 1rem 2rem 1rem;
    text-transform: uppercase;
    text-align: center;
  }
  h1,
  h2 {
    font-family: "Stick No Bills";
    letter-spacing: 1px;
  }
  p {
    font-size: 2rem;
    max-width: 70ch;
    margin-top: 1rem;
    line-height: 1.1;
    text-align: center;
  }
  h1,
  p {
    width: fit-content;
    margin-inline: auto;
  }
  .gallery-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 10px;
    margin-bottom: 0;
    padding-top: 1em;
    padding-inline: 1em;
    transition: 0.5s;
    background: black;
    padding-bottom: 1em;
    border-bottom: 1px solid brown;
  }

  @media (min-width: 768px) {
    .gallery-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  .gallery-item {
    position: relative;
    overflow: hidden;
    max-height: 1000px;
    transition:
      max-height 0.5s,
      opacity 0.5s,
      transform 0.5s;
  }

  .gallery-item::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(122, 3, 3, 0.527),
      rgba(255, 0, 0, 0)
    );
    opacity: 0;
    transition: opacity 0.2s;
    pointer-events: none;
  }

  .gallery-item:hover::after {
    opacity: 1;
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 16/9;
    transition: 0.2s;
    border: 1px solid black;
    display: block;
  }
  .gallery-item:hover img {
    cursor: pointer;
  }
  .gallery-item p {
    position: absolute;
    bottom: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.2s;
    z-index: 10;
    background: #121212cc;
    padding: 6px 3em 8px 1em;
    margin-bottom: 0;
    font-size: 1.5rem;
  }

  .gallery-item:hover p {
    opacity: 1;
  }

  .gallery-list:hover img:not(:hover) {
    filter: saturate(70%);
  }

  .gallery-modal {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.85);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s,
      visibility 0.2s;
    z-index: 1000;
  }

  .gallery-modal.is-open {
    opacity: 1;
    visibility: visible;
  }

  .gallery-modal-image {
    max-width: 92vw;
    max-height: 92vh;
    object-fit: contain;
    border: 1px solid #3b0d0d;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.6);
  }

  .gallery-modal-close {
    position: absolute;
    top: 6vh;
    right: 3vw;
    font-size: 3vw;
    line-height: 1;
    width: 4vw;
    aspect-ratio: 1;
    border: none;
    border-radius: 999px;
    color: white;
    background: rgba(129, 1, 1, 0.7);
    cursor: pointer;
  }
</style>
<script>
  const photoLists = document.querySelectorAll(".gallery-list");
  const modal = document.querySelector(".gallery-modal");
  const modalImage = document.querySelector(
    ".gallery-modal-image",
  ) as HTMLImageElement;
  const modalClose = document.querySelector(
    ".gallery-modal-close",
  ) as HTMLButtonElement;

  const openModal = (src: string, alt: string) => {
    if (!modal || !modalImage) return;
    modalImage.src = src;
    modalImage.alt = alt || "";
    modal.classList.add("is-open");
    modal.setAttribute("aria-hidden", "false");
  };

  const closeModal = () => {
    if (!modal || !modalImage) return;
    modal.classList.remove("is-open");
    modal.setAttribute("aria-hidden", "true");
    modalImage.src = "";
  };

  photoLists.forEach((photoList) => {
    photoList.addEventListener("click", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLImageElement)) return;
      openModal(target.currentSrc || target.src, target.alt);
    });
  });

  modalClose?.addEventListener("click", closeModal);
  modal?.addEventListener("click", (event) => {
    if (event.target === modal) closeModal();
  });

  document.addEventListener("keydown", (event) => {
    if (event.key === "Escape") closeModal();
  });
</script>
