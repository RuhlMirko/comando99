---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Galeria from "../components/Galeria.astro";
import Faq from "../components/Faq.astro";
import Navbar from "../components/Navbar.astro";
import Showcase from "../components/Showcase.astro";
---

<Layout>
  <Navbar
    navLinks={{
      hero: "Inicio",
      showcase: "Sobre Nosotros",
      gallery: "Galeria",
      faq: "Preguntas frecuentes",
    }}
  />
  <Welcome />
  <Showcase />
  <Galeria />
  <Faq />
</Layout>

<style is:global>
  :root {
    --bg-secondary: #a6292e;
    --text-primary: #c7191e;
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  body {
    max-width: 100vw;
    overflow-x: hidden;
    background: #121212;
    color: white;
    font-family:
      "Rajdhani",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  h2 {
    font-size: 50px;
    padding-bottom: 0;
  }

  section {
    margin-inline: 5vw;
    padding-bottom: 1em;
    margin-bottom: 2em;
    /* border-bottom: 2px solid rgba(165, 42, 42, 0.445); */
  }
  .scanline-overlay {
    position: fixed;
    background:
      linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.1) 50%),
      linear-gradient(
        90deg,
        rgba(255, 0, 0, 0.02),
        rgba(0, 255, 0, 0.01),
        rgba(0, 0, 255, 0.02)
      );
    background-size:
      100% 2px,
      3px 100%;
    pointer-events: none;
    z-index: 50;

    width: 100%;
    height: 100%;
  }

  .navigation-chevron {
    margin-left: 4px;
    font-size: 0.8em;
  }
</style>
